;;;; Functions for interacting with the operating system

(extern rt_get_argv 0 -> %get-argv)
(defvar $argv (%get-argv))

(extern rt_get_stdin 0 -> %get-stdin)
(defvar $stdin (%get-stdin))

(extern rt_get_stdout 0 -> %get-stdout)
(defvar $stdout (%get-stdout))

(extern rt_open 1 -> open)
(extern rt_close 1 -> close)

(extern rt_exec 2 -> exec)
